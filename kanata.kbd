;; =========================
;; Config
;; =========================

(defcfg
  process-unmapped-keys yes
  concurrent-tap-hold yes
  chords-v2-min-idle 50
)

;; =========================
;; Variables
;; =========================

(defvar
  tap-timeout 200
  hold-timeout 200
  chord-timeout 60
)

;; =========================
;; Alias
;; =========================

(defalias
  a (tap-hold $tap-timeout $hold-timeout a lmet)
  s (tap-hold $tap-timeout $hold-timeout s lalt)
  d (tap-hold $tap-timeout $hold-timeout d lctrl)
  f (tap-hold $tap-timeout $hold-timeout f lshift)

  j (tap-hold $tap-timeout $hold-timeout j lshift)
  k (tap-hold $tap-timeout $hold-timeout k lctrl)
  l (tap-hold $tap-timeout $hold-timeout l lalt)
  ; (tap-hold $tap-timeout $hold-timeout ; lmet)

  c (tap-hold $tap-timeout $hold-timeout c C-c)
  v (tap-hold $tap-timeout $hold-timeout v C-v)
  z (tap-hold $tap-timeout $hold-timeout z C-z)
  esc (tap-hold-press $tap-timeout $hold-timeout esc (layer-toggle nav))

  l-hrm (layer-switch hrm)
  l-num (layer-toggle num)

  ldesk M-C-left
  rdesk M-C-right
)

;; =========================
;; Sources
;; =========================

(defsrc
         f1     f2     f3     f4     f5     f6     f7     f8     f9     f10    f11    f12
  grv    1      2      3      4      5      6      7      8      9      0      -      =      bspc
  tab    q      w      e      r      t      y      u      i      o      p      [      ]      \
  esc    a      s      d      f      g      h      j      k      l      ;      '      ret
  lsft   z      x      c      v      b      n      m      ,      .      /      rsft
  lctl   lmet   lalt                 spc                  ralt          rctl
)

;; =========================
;; Layers
;; =========================

(deflayer hrm
         f1     f2     f3     f4     f5     f6     f7     f8     f9     f10    f11    f12
  grv    1      2      3      4      5      6      7      8      9      0      -      =      bspc
  tab    q      w      e      r      t      y      u      i      o      p      [      ]      \
  esc    @a     @s     @d     @f     g      h      @j     @k     @l     @;     '      ret
  lsft   z      x      c      v      b      n      m      ,      .      /      rsft
  lctl   lmet   lalt                 spc                  ralt          rctl
)

(deflayer mod
         f1     f2     f3     f4     f5     f6     f7     f8     f9     f10    f11    f12
  grv    1      2      3      4      5      6      7      8      9      0      -      =      bspc
  tab    q      w      e      r      t      y      u      i      o      p      [      ]      \
  @esc   @a     @s     @d     @f     g      h      @j     @k     @l     @;     '      ret
  @l-num @z     x      @c     @v     b      n      m      ,      .      /      @l-num
  lctl   lmet   lalt                 spc                  ret           rctl
)

(deflayer nav
         •      •      •      •      •      •      •      •      •      •      •      •
  •      •      •      •      •      •      •      •      •      •      •      •      •      •
  •      •      vold   volu   mute   •      home   pgup   end    pgdn   esc    •      •      •
  @l-hrm lmet   lalt   lctl   lsft   •      left   down   up     right  •      •      ret
  •      •      •      prev   pp     next   •      •      @ldesk @rdesk del    •
  •      •      ret                  bspc                 •             •
)

(deflayer num
         •      •      •      •      •      •      •      •      •      •      •      •
  •      •      •      •      •      •      •      •      •      •      •      •      •      •
  S-grv  S-1    S-2    S-3    S-4    S-5    S-6    S-7    S-8    S-9    S-0    bspc   •      •
  grv    1      2      3      4      5      6      7      8      9      0      l      •
  •      S-\    S-=    S--    S-[    S-]    [      ]      -      =      \      •
  •      •      •                    spc                  •             •
)

(deflayer default
         f1     f2     f3     f4     f5     f6     f7     f8     f9     f10    f11    f12
  grv    1      2      3      4      5      6      7      8      9      0      -      =      bspc
  tab    q      w      e      r      t      y      u      i      o      p      [      ]      \
  esc    a      s      d      f      g      h      j      k      l      ;      '      ret
  lsft   z      x      c      v      b      n      m      ,      .      /      rsft
  lctl   lmet   lalt                 spc                  ralt          rctl
)

;; =========================
;; Chords
;; =========================

(defchordsv2
  (l s d) (layer-switch default) $chord-timeout first-release ()
  (l s h) (layer-switch hrm) $chord-timeout first-release ()
  (l s n a) (layer-switch nav) $chord-timeout first-release ()
  (l s n u) (layer-switch num) $chord-timeout first-release ()
  (l s m) (layer-switch mod) $chord-timeout first-release ()
)
